<!-- begin #page-loader -->
<div id="page-loader" class="fade in"><span class="spinner"></span></div>
<!-- end #page-loader -->

<div class="login-cover">
  <div class="login-cover-image">
    <img src="/assets/login-bg/bg-1.jpg" data-id="login-cover-image" alt="" />
  </div>
  <div class="login-cover-bg"></div>
</div>
<!-- begin #page-container -->
<div id="page-container" class="fade">
  <!-- begin login -->
  <div class="login login-v2" data-pageload-addclass="animated flipInX">
    <!-- begin brand -->
    <div class="login-header">
      <div class="brand">
        <span class="logo"></span> User Registration
        <small></small>
      </div>
      <div class="icon">
        <i class="fa fa-sign-in"></i>
      </div>
    </div>
    <!-- end brand -->
    <div class="login-content">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "margin-bottom-0") do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group m-b-20">
          <%= f.text_field :first_name, autofocus: true, class: "form-control input-lg", placeholder: "First Name" %>
        </div>

        <div class="form-group m-b-20">
          <%= f.text_field :last_name, class: "form-control input-lg", placeholder: "Last Name" %>
        </div>

        <div class="form-group m-b-20">
          <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email Address" %>
        </div>

        <div class="form-group m-b-20">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
        </div>

        <div class="form-group m-b-20">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Password Confirmation" %>
        </div>

        <div class="login-buttons">
          <%= f.submit "Register", class: "btn btn-success btn-block btn-lg" %>
        </div>
      <% end %>
      <br/>
      <%= render "admin/shared/links" %>
    </div>
  </div>
  <!-- end login -->
    
